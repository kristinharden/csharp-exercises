@{

}

<h1>My Cheeses</h1>

<p><a asp-controller="Cheese" asp-action="Add">Add Cheese</a></p> 
<p><a asp-controller="Cheese" asp-action="Remove">Remove Cheese</a></p>

@if (ViewBag.cheeses.Count == 0)
{
    <p>No cheeses in your list yet!</p>
}



<ul>
    @foreach (KeyValuePair<string, string> cheese in ViewBag.cheeses)
    {
        <li>
            <strong>@cheese.Key</strong>
            <p><em>@cheese.Value</em></p>
            
        </li>
    }
</ul>
